# terraform.tfvars.example
# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored for security

aws_region  = "us-east-2"  # Ohio region (good for G5 availability)
aws_profile = "your-aws-profile-name"  # Your AWS CLI profile

# SSH Keys (using default paths)
public_key_path  = "~/.ssh/id_rsa.pub"
private_key_path = "~/.ssh/id_rsa"

# Project naming
project_name = "video-generation"
key_name     = "video-generation-key"

# ==========================================
# CURRENT: Testing without GPU (CPU only)
# ==========================================
# While waiting for GPU quota approval, using CPU instance to test setup
instance_type      = "t3.2xlarge"   # 8 vCPUs, 32GB RAM - Setup testing only
use_spot_instance  = false          # On-Demand for stability
spot_max_price     = ""

# Reduced storage for testing
root_volume_size   = 75    # OS and basic software (Deep Learning AMI minimum)
models_volume_size = 50    # Just for testing structure
output_volume_size = 20    # Minimal

# ==========================================
# PRODUCTION: GPU Configuration (COMMENTED - WAITING QUOTA APPROVAL)
# ==========================================
# Uncomment when AWS approves quota increase (96 vCPUs for G and VT instances)
#
# instance_type      = "g5.12xlarge"  # 4x NVIDIA A10G, 96GB VRAM - PRODUCTION
# use_spot_instance  = true           # Use Spot for 70% savings (~$1.70/hour vs $5.67)
# spot_max_price     = ""             # Empty = current spot price
#
# # Full storage for production
# root_volume_size   = 100   # OS and software
# models_volume_size = 500   # AI models (Ovi ~91GB, Wan ~30GB, CogVideoX ~25GB)
# output_volume_size = 200   # Generated videos

# ==========================================
# ALTERNATIVE GPU OPTIONS (if G5 quota not approved)
# ==========================================
# Option 1: G4DN instances (cheaper, less VRAM)
# instance_type      = "g4dn.12xlarge"  # 4x NVIDIA T4, 64GB VRAM - $3.91/hour
# models_volume_size = 300              # Smaller models only
#
# Option 2: P3 instances (older, expensive)
# instance_type      = "p3.2xlarge"     # 1x NVIDIA V100, 16GB VRAM - $3.06/hour
# models_volume_size = 100              # Very limited

# Security
allowed_ssh_cidrs = ["0.0.0.0/0"]  # WARNING: Change to your IP for better security
# Example with your IP only: ["123.456.789.0/32"]
